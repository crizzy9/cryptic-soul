---
// TODO: Add category and location?
// TODO: Fix Badge and Tag url
const { title, img, desc, url, badges, tags, pubDate, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
import { getBadges, getBadgeClass } from "../lib/helpers";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";

const tag_url = url && url.split("/").slice(0, -1).join("/") + "/tag";
const displayBadges = getBadges(pubDate, badges);
dayjs.extend(localizedFormat);
const displayDate = dayjs(pubDate).format("MMM DD, YYYY");
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full max-h-full md:max-h-[9rem] md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full flex flex-col">
        <div class="flex justify-between items-start">
          <h1 class="text-xl font-bold">{title}</h1>
          <div class="flex flex-wrap gap-1">
            {displayBadges.map((badge) => (
              <div class={getBadgeClass(badge)}>{badge}</div>
            ))}
          </div>
        </div>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-between mt-auto">
          <time class="text-sm text-base-content/70">{displayDate}</time>
          <div class="flex items-center gap-2">
            {
              tags &&
                tags.map((tag) => (
                  <a href={`${tag_url}/${tag}`} class="badge badge-outline">
                    {tag}
                  </a>
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
